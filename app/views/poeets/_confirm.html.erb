<div class="modal-dialog" role="document">
  <div class="modal-content poeet-dialog">
    <%= form_with(model: @poeet, url:confirm_new_or_edit, method: confirm_form_method, remote: true) do |form| %>
      <div class="modal-header">
        <% if @poeet.id? %>
          <h5 class="modal-title" id="exampleModalLabel">ポイート編集の確認</h5>
        <% else %>
          <h5 class="modal-title" id="exampleModalLabel">新規ポイートの確認</h5>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form.hidden_field :content %>
          <div class = "poeet-body">
          <% if @poeet.image? %>
            <div class="poeet-content" style="background:url(<%= @poeet.image.thumb %>)">
                <div style = "background-color:rgba(0,0,0,0.6); height:400px; width:400px">
                 <p class="poeet-text" style="color:#FFFFFF"> <%= @poeet.content %></p>
                </div>
                 <%= form.hidden_field :image_cache %>
              </div>

             
          <% else %>
           <div class="poeet-content">
              <p class="poeet-text"> <%= @poeet.content %></p>
           </div>
          <% end %>
          </div>
          <div class="modal-footer actions poeet-footer-confirm">
            <div class = "poeet-delete">
              <%= form.submit('ポイート',class: 'poeet-btn') %>
            </div>
    
            <div class="poeet-edit">
              <%= form.submit('戻る',class: 'poeet-btn',name: 'back')%>
            </div>
            
          </div>
        
      </div?>
    <% end %>
  </div>
</div>