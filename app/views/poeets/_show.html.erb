<div class="modal-dialog" role="document">
  <div class="modal-content poeet-show-dialog">
    <%= form_with(model: @poeet, remote: true) do |form| %>
      <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">ポイート詳細</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form.hidden_field :content %>
          <div class = "poeet-body">
          <% if @poeet.image? %>
            <div class="poeet-show-content" style="background:url(<%= @poeet.image %>)">
                <div style = "background-color:rgba(0,0,0,0.6); height:700px; width:700px">
                 <p class="poeet-text" style="color:#FFFFFF"> <%= @poeet.content %></p>
                </div>
                 <%= form.hidden_field :image_cache %>
              </div>   
          <% else %>
           <div class="poeet-content">
              <p class="poeet-text"> <%= @poeet.content %></p>
           </div>
          <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>